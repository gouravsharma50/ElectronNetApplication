@model DesktopApplication.Models.BranchModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Branch</h1>
<div class="d-flex justify-content-between">
    <a asp-action="Index">Back to Branch List</a>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Branch</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BranchName)
        </dd>

        <!-- Removed BranchCreatedDate from the view since it's server-handled -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Corporation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Corporation.CorporationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BranchCreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <!-- Removed IsSync and Role from the view as they are handled server-side -->
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BranchId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        
    </form>
</div>
