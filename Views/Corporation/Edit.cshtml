@model DesktopApplication.Models.CorporationModel

@{
    ViewData["Title"] = "Edit Corporation";
}

<h1>Edit Corporation</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CorporationId" />
            <div class="form-group">
                <label asp-for="CorporationName" class="control-label"></label>
                <input asp-for="CorporationName" class="form-control" />
                <span asp-validation-for="CorporationName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

