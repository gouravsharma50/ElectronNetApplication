@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-section" style="background: url('@Url.Content("~/assets/homecorporate.jpg")') no-repeat center center/cover;">
<div class="glass-container">
    <h1>Login</h1>
        <span class="alert-danger">@(ViewBag.Error ?? "")</span>
    <form method="post" action="@Url.Action("Login", "Home")">
            <input type="text" class="input-field" placeholder="Username" name="Username" required>
            <input type="password" class="input-field" name="Password" placeholder="Password" required>
            <button type="submit" class="LoginBtn">Login</button>
    </form>
</div>
</section>