@model DesktopApplication.Models.UserModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutBranch.cshtml";
}

<h1>Create</h1>
<div class="d-flex justify-content-between">
    <a asp-action="Index">Back to User List</a>
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CorporationId" class="control-label"></label>
                <select asp-for="CorporationId" class ="form-control" asp-items="ViewBag.CorporationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BranchId" class="control-label"></label>
                <select asp-for="BranchId" class ="form-control" asp-items="ViewBag.BranchId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
         
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


