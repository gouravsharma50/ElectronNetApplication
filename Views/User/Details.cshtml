@model DesktopApplication.Models.UserModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutBranch.cshtml";
}

<h1>Details</h1>
<div class="d-flex justify-content-between">
    <a asp-action="Index">Back to User List</a>
    <a asp-action="Edit" asp-route-id="@Model?.UserId">Edit User</a> 
    <a asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Corporation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Corporation.CorporationName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Branch)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Branch.BranchName)
        </dd>
    </dl>
</div>

